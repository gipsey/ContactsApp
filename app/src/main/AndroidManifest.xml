<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.training.contactsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".utils.ContactsApplication"
        android:allowBackup="true"
        android:icon="@drawable/contacts"
        android:label="@string/app_name"
        android:theme="@style/CustomAppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBxSLhn8qKZSz8ibAVJQZU_gqLIS7s1aX0" />

        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".ContactListActivity" />
        </activity>
        <activity
            android:name=".view.activities.ContactDetailsAndEditActivity"
            android:label="@string/title_activity_contact_details" />
        <activity
            android:name=".view.activities.ContactAddActivity"
            android:label="@string/title_activity_contact_add" />
        <activity
            android:name=".view.activities.MapAndWeatherActivity"
            android:label="@string/title_activity_map_and_weather"></activity>
    </application>

</manifest>
