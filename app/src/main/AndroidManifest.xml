<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.training.davidd.contactsapp">

    <uses-permission android:name="android.permission.INTERNET" />Æ’

    <application
        android:allowBackup="true"
        android:icon="@drawable/contacts"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".ContactListActivity" />
        </activity>

        <activity
            android:name=".ContactDetailsActivity"
            android:label="@string/title_activity_contact_details"></activity>

        <activity
            android:name=".ContactEditActivity"
            android:label="@string/title_activity_contact_edit"></activity>

        <activity
            android:name=".ContactAddActivity"
            android:label="@string/title_activity_contact_add"></activity>
    </application>

</manifest>
